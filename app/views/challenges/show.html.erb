<%= image_tag @challenge.image.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @challenge.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @challenge.description %>
</p>

<p>
  <strong>Begin period:</strong>
  <%= @challenge.begin_period %>
</p>

<p>
  <strong>End period:</strong>
  <%= @challenge.end_period %>
</p>

<div id="ideas_wrapper">
  <%= render @challenge.ideas%>
  <div id="form">
    <%= render "ideas/form"%>
  </div>
</div>

<%= link_to 'Edit', edit_challenge_path(@challenge) %> |
<%= link_to 'Back', challenges_path %>
